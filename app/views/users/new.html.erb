<h1>Register new user</h1>


<%= form_for @user do |f| %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
    <p>
    <%= f.label :password_confiration %><br />
    <%= f.password_field :password_confiration %>
  </p>

  <p><%= f.submit "Submit" %></p>
<% end %>

